		<%- include('includes/navigation.ejs') %>
		<main class="main3">
			<form class="content_form" action="/post-content" method="post">
				<div class="title_input_section input_section">
					<h2>Title:</h2>
					<input type="text" class="title_input" name="title_content_save"/>
				</div>
				<div class="code_input_section text_input_section plus">
					<h2>Code:</h2>
					<textarea class="code_input" name="code_content_save"></textarea>
					<svg
						xmlns="http://www.w3.org/2000/svg"
						viewBox="0 0 24 24"
						fill="currentColor"
						class="w-6 h-6"
					>
						<path
							fill-rule="evenodd"
							d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25zM12.75 9a.75.75 0 00-1.5 0v2.25H9a.75.75 0 000 1.5h2.25V15a.75.75 0 001.5 0v-2.25H15a.75.75 0 000-1.5h-2.25V9z"
							clip-rule="evenodd"
						/>
					</svg>
				</div>
				<div class="description_input_section text_input_section plus">
					<h2>Description:</h2>
					<textarea class="description_input" name="description_content_save"> </textarea>
					<svg
						xmlns="http://www.w3.org/2000/svg"
						viewBox="0 0 24 24"
						fill="currentColor"
						class="w-6 h-6"
					>
						<path
							fill-rule="evenodd"
							d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25zM12.75 9a.75.75 0 00-1.5 0v2.25H9a.75.75 0 000 1.5h2.25V15a.75.75 0 001.5 0v-2.25H15a.75.75 0 000-1.5h-2.25V9z"
							clip-rule="evenodd"
						/>
					</svg>
				</div>
				<div class="output_input_section text_input_section plus">
					<h2>Output:</h2>
					<textarea class="output_input" name="output_content_save"></textarea>
					<svg
						xmlns="http://www.w3.org/2000/svg"
						viewBox="0 0 24 24"
						fill="currentColor"
						class="w-6 h-6"
					>
						<path
							fill-rule="evenodd"
							d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25zM12.75 9a.75.75 0 00-1.5 0v2.25H9a.75.75 0 000 1.5h2.25V15a.75.75 0 001.5 0v-2.25H15a.75.75 0 000-1.5h-2.25V9z"
							clip-rule="evenodd"
						/>
					</svg>
				</div>
				<section class="content_form_last"></section>
				<div class="code_used_input">
					<span>Code Used:</span>
					<select id="myDropdown">
						<option value="C">C</option>
						<option value="javascript">JavaScript</option>
						<option value="c++">C++</option>
						<option value="pearl">Pearl</option>
					</select>
				</div>
				<button class="submit-btn">Submit</button>
			</form>
